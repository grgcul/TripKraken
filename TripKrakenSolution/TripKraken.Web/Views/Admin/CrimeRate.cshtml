

@model TripKraken.Service.ViewModel.UserCrimeRateInputView

@section breadcrump{
    <div class="row">
        <div class="col-lg-6">
            <div class="page-header-title">
                <h4 class="m-b-10">All crime rate input</h4>
            </div>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"><i class="feather icon-home"></i></a></li>
                <li class="breadcrumb-item"><a href="#!">All crime rate input</a></li>
            </ul>
        </div>
    </div>


    <hr />
}
@{
    Html.RenderAction("Search", "Home", new { actionP = "CrimeRate", controllerP = "Admin" });
}
<div class="row">
    <div class="col-xl-12 no-padding-l">
        <div class="card">
            <div class="card-header">
                <h3>Crime rate input list</h3>
                <span class="d-block m-t-5"></span>
            </div>
            <div class="card-block table-border-style">
                <div class="table-responsive">
                    <table class="table table-hover f-18">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Create Date</th>
                                <th>Value Type</th>
                                <th>Username</th>
                                <th>Value</th>
                                <th>Country Name</th>
                                <th>Options</th>
                            </tr></thead>
                        <tbody>
                            @foreach (var item in Model.CrimeRateList)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.CreateDate</td>
                                    <td>@item.CrimeRateType.Name</td>
                                    <td>@item.User.UserName</td>
                                    <td>@((int)item.Value) / 100</td>
                                    <td>@item.CountryInfo.Country.Name</td>
                                    <td>
                                        @using (Html.BeginForm("DeleteCrimeRate", "Admin", new { id = item.Id }))
                                        {
                                            <button class="btn btn-danger" type="submit">Delete</button>
                                        }
                                        <a href="@Url.Action("EditCrimeRate", "Admin", new { id = item.Id })" class="btn btn-primary text-white f-12"> Edit</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>