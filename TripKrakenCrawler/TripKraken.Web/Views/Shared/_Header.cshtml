@using Microsoft.AspNet.Identity
 

<!-- [ Header ] start -->

    
    <header class="navbar pcoded-header navbar-expand-lg navbar-light">
    <div class="m-header">
        <a class="mobile-menu" id="mobile-collapse1" href="#!"><span></span></a>
        <a href="index.html" class="b-brand">
            <div class="b-bg">
                <i class="feather icon-trending-up"></i>
            </div>
            <span class="b-title">Datta Able</span>
        </a>
    </div>
    <a class="mobile-menu" id="mobile-header" href="#!">
        <i class="feather icon-more-horizontal"></i>
    </a>
    <div class="collapse navbar-collapse">
 
        <ul class="navbar-nav ml-auto">
            <li>
                <div class="dropdown drp-user">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="icon feather icon-settings"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right profile-notification">
                    @if (Request.IsAuthenticated)
                    {
                        <div class="pro-head">
                            <img src="~/assets/images/user/avatar-1.jpg" class="img-radius" alt="User-Profile-Image">
                            <span>@User.Identity.GetUserName()</span>
                            <a href="javascript:document.getElementById('logoutForm').submit()" class="dud-logout" title="Logout">
                                <i class="feather icon-log-out"></i>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="pro-head">
                            <img src="~/assets/images/user/avatar-2.jpg" class="img-radius" alt="User-Profile-Image">
                            <span>Login / Register</span>
                        </div>
                    }

                        <ul class="pro-body">
                            @if (Request.IsAuthenticated)
                            {
                                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
                                {
                                    @Html.AntiForgeryToken()

                                    <li>
                                        @Html.ActionLink("My profile", "Index", "Manage", routeValues: null, htmlAttributes: new {title = "Manage"})
                                    </li>
                                }
                            }
                            else
                            {
                                <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new {id = "registerLink"})</li>
                                <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new {id = "loginLink"})</li>
                            }
                        </ul>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</header>
<!-- [ Header ] end -->